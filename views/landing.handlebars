<div class="row">

    <div class="col">
        <a href="/">
            <h2 style="text-align: center">Home</h2>
        </a>
    </div>
</div>
<div style="margin: 5% 20%">
    <div class="ui center aligned basic segment">
        <div class="ui form">
            <form action="/login" method="Post">
                <div class="field">
                    <label>User Name</label>
                    <div class="ui left icon input">
                        <input type="text" name="userName" placeholder="Username">
                        <i class="user icon"></i>
                    </div>
                    {{#if messages.userError}}
                    <h5>{{messages.userError}}</h5>
                    {{/if}}
                </div>
                <div class="field">
                    <label>Passord</label>
                    <div class="ui left icon input">
                        <input type="password" name="password" placeholder="Password">
                        <i class="key icon"></i>
                    </div>
                     {{#if messages.passError}}
                    <h5>{{messages.passError}}</h5>
                    {{/if}}
                </div>

                <button type="submit" class="fluid ui blue submit button">Login</button>
            </form>
        </div>
        <div class="ui horizontal divider">
            Or
        </div>
        <div class="ui placeholder segment">
            <div class="signup__container">

                <div class="container__child signup__form">
                    <form action="/register" method="POST">
                        <div class="ui form">
                            <div class="two fields">
                                <div class="field">
                                    <label>Full Name</label>
                                    <input placeholder="Full Name" name="fullname" type="text">
                                 {{#if messages.errorName}}
                                <h5>{{messages.errorName}}</h5>
                                 {{/if}}
                                </div>
                               
                                <div class="field">
                                    <label>User Name</label>
                                    <input placeholder="User Name" name="username" type="text">
                                 {{#if messages.errorUsername}}
                                <h5>{{messages.errorUsername}}</h5>
                                 {{/if}}
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <select class="custom-select" name="usertype" id="inputGroupSelect02">
                                    <option disabled>User Type</option>
                                    <option value="admin">Admin</option>
                                    <option value="doctor">Doctor</option>
                                    <option value="forensic scientist">Forensic Scientist</option>
                                </select>

                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label>Password</label>
                                    <input placeholder="Password" name="password" type="password">
                                 {{#if messages.errorpass1}}
                                <h5>{{messages.errorpass1}}</h5>
                                 {{/if}}
                                </div>
                                <div class="field">
                                    <label>Confirm Passord</label>
                                    <input placeholder="Confirm Password" name="password2" type="password">
                                  {{#if messages.errorPass2}}
                                <h5>{{messages.errorPass2}}</h5>
                                 {{/if}}
                                </div>
                            </div>
                            <button type="submit" class="fluid ui orange submit button">Register</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>